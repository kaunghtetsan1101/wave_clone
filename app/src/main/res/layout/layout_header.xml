<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/App.Header.Layout"
    android:layout_marginHorizontal="10dp">

    <androidx.constraintlayout.helper.widget.Flow
        style="@style/App.Flow"
        app:constraint_referenced_ids="tv_label_one,tv_label_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_label_one"
        style="@style/App.Header.Text"
        android:gravity="start"
        android:text="@string/amount_send"
        app:layout_constraintHorizontal_weight="0.55" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_label_two"
        style="@style/App.Header.Text"
        android:gravity="end"
        android:text="@string/transaction_fee"
        app:layout_constraintHorizontal_weight="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>