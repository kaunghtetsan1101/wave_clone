<resources>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.WaveClone</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.WaveClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Text View-->
    <style name="textStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="textTabStyle" parent="textStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="App.Flow" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="flow_wrapMode">chain</item>
        <item name="flow_verticalAlign">top</item>
    </style>

    <style name="App.Header.Layout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_25dp</item>
    </style>

    <style name="App.Header.Text" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabTextAppearance">@style/textTabStyle</item>
    </style>


    <style name="Awonar.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:layout_margin">@dimen/_10dp</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Awonar.Text.Bold.Large" parent="">
        <item name="android:textSize">@dimen/awonar_size_text_large</item>
    </style>

    <style name="Awonar.Text.Bold.Normal" parent="">
        <item name="android:textSize">@dimen/awonar_size_text_normal</item>
    </style>

    <style name="Awonar.Text.Default.Normal" parent="">
        <item name="android:textSize">@dimen/awonar_size_text_normal</item>
    </style>

    <style name="Awonar.Text.Default.Small" parent="">
        <item name="android:textSize">@dimen/awonar_size_text_small</item>
    </style>

    <style name="Awonar.Title" parent="Awonar.Text.Bold.Large" />

    <style name="Awonar.SubTitle" parent="Awonar.Text.Bold.Normal" />

    <style name="Awonar.Description" parent="Awonar.Text.Default.Normal" />

    <style name="Awonar.SubDescription" parent="Awonar.Text.Default.Small" />

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
</resources>